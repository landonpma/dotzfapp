<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>ЭкоДом: Журнал обращений</title>
    <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon">

    <!-- Внешние стили -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="css/main.css" rel="stylesheet">
    <script
            src="https://api-maps.yandex.ru/2.1/?apikey=280739b2-c2da-410c-8954-266594fa2827&lang=ru_RU"
            type="text/javascript"
    ></script>
</head>
<body class="custom-scrollbar">

<%- include('particles/header') %>

<main>
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-2 mt-3 gap-2">

            <button id="add-button" class="btn btn-custom" type="button">
                Добавить
            </button>

            <div class="d-flex align-items-center gap-2">
                <div id="form-container" class="input-group form-styled">
                    <select id="column-select" class="form-select form-select-custom hidden-field"
                            aria-label="Выбор категории">
                        <option value="" disabled selected>Фильтр</option>
                        <option value="num">№ ДС</option>
                        <option value="date">Дата обращения</option>
                        <option value="card_number">№ Карточки обращения</option>
                        <option value="settlement">Поселение</option>
                        <option value="address">Адрес</option>
                        <option value="coordinates">Координаты</option>
                        <option value="topic">Тема обращения</option>
                        <option value="measures">Принятые меры</option>
                        <option value="status">Статус</option>
                        <option value="source">Источник</option>
                        <option value="employee">Ответственный сотрудник</option>
                    </select>

                    <input type="text" id="search-input" class="form-control form-input-custom hidden-field"
                           placeholder="Искать" aria-label="Поиск" style="min-width: 400px">

                    <button class="btn-custom search-button">
                        <div class="icon-container">
                            <i class="fas fa-magnifying-glass search-icon"></i>
                        </div>
                    </button>
                </div>

                <div class="dropdown">
                    <button class="btn btn-custom dropdown-toggle" type="button" id="excelDropdown"
                            data-bs-toggle="dropdown" aria-expanded="false">
                        Экспорт
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="excelDropdown">
                        <li>
                            <a class="dropdown-item" href="#" onclick="exportTableToExcel()">Экспорт в Excel</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Таблица данных -->
        <div id="table-container" class="table-responsive custom-scrollbar">
            <table id="data-table" class="display table table-hover table-bordered">
                <thead>
                <tr>
                    <th>№</th>
                    <th>Дата обращения</th>
                    <th>№ Карточки</th>
                    <th>Поселение</th>
                    <th>Адрес</th>
                    <th>Координаты</th>
                    <th>Тема обращения</th>
                    <th>Принятые меры</th>
                    <th>Статус</th>
                    <th>Источник</th>
                    <th>Ответственный</th>
                </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

    <!-- Индикатор загрузки -->
    <div id="loading-indicator">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Загрузка...</span>
        </div>
    </div>
</main>

<%- include('particles/modal-appeals') %>

<!-- Подключение внешних скриптов -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
<script src="src/js/appeals-journal.js"></script>
</body>
</html>
