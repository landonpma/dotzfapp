<script>
	// Обновление даты и времени
	function updateDateTime() {
		const currentDateElement = document.getElementById('currentDate');
		const currentTimeElement = document.getElementById('currentTime');
		const now = new Date();

		// Форматирование текущей даты
		const formattedDate = now.toLocaleDateString('ru-RU', {
			weekday: 'long',
			year: 'numeric',
			month: 'long',
			day: 'numeric'
		});


		// Ручное форматирование времени
		const hours = now.getHours().toString().padStart(2, '0'); // Часы
		const minutes = now.getMinutes().toString().padStart(2, '0'); // Минуты
		const seconds = now.getSeconds().toString().padStart(2, '0'); // Секунды

		const formattedTime = `${hours}∶${minutes}∶${seconds}`; // Используем Unicode-символ ∶ (U+2236)

		// Установка значений в элементы
		currentDateElement.textContent = formattedDate;
		currentTimeElement.textContent = formattedTime;
	}

	// Обновление каждую секунду
	setInterval(updateDateTime, 1000);
	updateDateTime();
</script>
